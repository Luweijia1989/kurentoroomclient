}

#MainUI #label_logo
{
	color:rgb(229,229,229);
	font-size:14px;
	font-weight:bold;
}

#MainUI #widget_top
{
	background-color: rgb(13, 106, 173);
}

#MainUI #widget_left
{
	background-color: rgb(0, 26, 53);
}

#MainUI #widget_chat
{
	background-color: rgb(199, 237, 204);
}

#MainUI #scrollArea_display
{
	border:none;
}

#MainUI #widget_work
{
	background-color: rgb(220, 218, 218);
}

#MainUI #list_local
{	
