#label_render
{
	background-color:rgb(214,229,246);
}

#label_size,
#label_name
{
	border:none;
	color:white;
	font-size:12px;
	border-radius:10px;
	background-color:rgba(0,0,0,40%);
}

#btn_fullScreen{
	border:none;
	border-image: url(:/image/Resources/icon_maximize_normal.png);
}
#btn_fullScreen:hover:!pressed{
	border-image: url(:/image/Resources/icon_maximize_hover.png);
}
#btn_fullScreen:pressed{
	border-image: url(:/image/Resources/icon_maximize_click.png);
}
#btn_fullScreen:checked{
	border:none;
	border-image: url(:/image/Resources/icon_restore_normal.png);
}
#btn_fullScreen:checked:hover:!pressed{
	border-image: url(:/image/Resources/icon_restore_hover.png);
}
#btn_fullScreen:checked:pressed{
	border-image: url(:/image/Resources/icon_restore_click.png);
}
