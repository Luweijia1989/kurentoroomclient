*{
	font-family: Arial,"Microsoft YaHei","Segoe UI Emoji" ;
	font-size: 10pt;
}

QScrollBar:vertical {
    background:transparent;
    width: 8px;
    margin: 0px 0 0px 0;
}
QScrollBar::handle:vertical{
    background: rgba(0,0,0,38);
    min-height: 20px;
    border-radius: 4px;
    border: none;
}
QScrollBar::handle:vertical:hover{  
	background: rgba(0,0,0,64);
 } 
QScrollBar::handle:vertical:pressed {  
	background: rgba(0,0,0,64);
 }
QScrollBar::add-line:vertical {
    height: 0px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}
QScrollBar::sub-line:vertical {
    height: 0px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}
QScrollBar::up-arrow:vertical, 
QScrollBar::down-arrow:vertical {
    border: 1px solid grey;
    width: 4px;
    height: 4px;
    background: white;
}
QScrollBar::add-page:vertical, 
QScrollBar::sub-page:vertical {
    background: none;
}

QComboBox
{
	border:1px solid rgb(0, 170, 255);
	height:30px;
	border-radius:2px;
	selection-color:black;
}

/*************************LoginUI*************************/
#LoginUI #label_logo
{
	border-image:url(:/image/Resources/logo.png);
}

#LoginUI QLineEdit
{
	border:1px solid rgb(0, 170, 255);
	height:30px;
	border-radius:2px;
}

#LoginUI QLineEdit[error="true"]
{
	border:1px solid #b74d46;
	height:30px;
	border-radius:2px;
}

#LoginUI #btnLogin
{
	height:30px;
	color: rgb(255, 255, 255);
	border-radius:2px;
	background-color: rgb(45, 208, 207);
}

#LoginUI #btnLogin:hover
{
	background-color:rgb(32, 150, 148);
}
#LoginUI #btnLogin:disabled
{
	background-color:rgb(107, 107, 107);
}

/*************************LoginUI*************************/

/*************************MainUI**************************/
